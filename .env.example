# =============================================================================
# Django Core
# =============================================================================

# Secret key - generate a unique value for each environment:
#   python -c "from django.core.management.utils import get_random_secret_key; print(get_random_secret_key())"
SECRET_KEY='your-secret-key-here'

# Debug mode - MUST be False in production
DEBUG=True

# Comma-separated list of allowed hostnames
# Example: ALLOWED_HOSTS=myapp.com,www.myapp.com
ALLOWED_HOSTS=localhost,127.0.0.1

# =============================================================================
# Settings module (production deployments)
# =============================================================================

# Uncomment the line below to use the production settings module
# DJANGO_SETTINGS_MODULE=core.settings_production

# =============================================================================
# Database (production)
# =============================================================================

# PostgreSQL connection URL - required when using core.settings_production
# Format: postgres://USER:PASSWORD@HOST:PORT/DBNAME
# Example: DATABASE_URL=postgres://finanpy_user:strongpassword@localhost:5432/finanpy_db
DATABASE_URL=

# =============================================================================
# Email (production)
# =============================================================================

# SMTP backend (default). Use 'django.core.mail.backends.console.EmailBackend'
# during local development if you do not have an SMTP server configured.
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend

# SMTP server hostname
# Common values: smtp.gmail.com, smtp.sendgrid.net, smtp.mailgun.org
EMAIL_HOST=smtp.gmail.com

# SMTP port - 587 for TLS (recommended), 465 for SSL, 25 for unencrypted
EMAIL_PORT=587

# Enable STARTTLS encryption (True for port 587)
EMAIL_USE_TLS=True

# SMTP credentials
EMAIL_HOST_USER=your-email@example.com
EMAIL_HOST_PASSWORD=your-smtp-password-or-app-password

# Sender address shown in outgoing emails
DEFAULT_FROM_EMAIL=FinanPy <your-email@example.com>

# Sender address used for server error emails
SERVER_EMAIL=your-email@example.com

# =============================================================================
# Admins (production)
# =============================================================================

# Comma-separated list of admins who receive error emails (DEBUG=False only).
# Format: Name:email,Name:email
# Example: ADMINS=John Doe:john@example.com,Jane Doe:jane@example.com
ADMINS=
